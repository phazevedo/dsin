    <%= link_to 'Voltar', orders_path %>

<div class="title">
  Pedido nº <%=@order.id%>
</div>
<div class="data">
Data Pedido <%=@order.created_at.strftime("%d/%m/%Y %H:%M")%>
</div>
<div class="value">
  Valor total <%= @order.value %>
</div>
<div class="status">
  <% if @order.status != Order::STATUS_OPEN %>
    Status <%= @order.get_status%> 
  <% end %> 
</div>

<div class="card table-consultation">
  <div class="header">
    <h4 class="title">Produtos</h4>
  </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Quantidade</th>
          </tr>
        </thead>

        <tbody>
          <% OrderProduct.where(order_id: @order.id).each do |prod| %>  
            <tr>
              <td><%= prod.product.name %></td>
              <td><%= prod.product.price %></td>
              <td><%= prod.qty %></td>
              <% if Order::STATUS_EDITABLE.include?(@order.status) %>
                <td>
                  <%= button_to remove_prod_orders_path(prod.id), method: :delete, data: {confirm: 'Esse item será removido do pedido', disable_with: false}, class: 'options delete-btn' do %>
                    remover
                  <% end %>  
                </td>
              <% end %> 
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


<% if @order.status == Order::STATUS_OPEN %>
  <%= link_to "CONFIRMAR", confirm_order_path(@order.id),method: :post, :class => 'btn btn-default' %>
<% end %> 

<% if @order.status == Order::STATUS_STARTED %>
  <h1>SEU PEDIDO AINDA PODE SER ALTERADO, PARA ISSO SELECIONE UM NOVO PRODUTO NO MENU OU REMOVA NA TABELA ACIMA</h1>
<% end %> 