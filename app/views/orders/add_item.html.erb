<style>
.value-button {
  display: inline-block;
  border: 1px solid #ddd;
  margin: 0px;
  width: 40px;
  height: 20px;
  text-align: center;
  vertical-align: middle;
  padding: 11px 0;
  background: #eee;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  box-sizing: content-box !important;
}

.value-button span{
  font-size: 25px;
}

.value-button:hover {
  cursor: pointer;
}

#decrease {
  margin-right: -4px;
  border-radius: 8px 0 0 8px;
  text-align: center;
}

#increase {
  margin-left: -4px;
  border-radius: 0 8px 8px 0;
}

#input-wrap {
  margin: 0px;
  padding: 0px;
}

input#qty {
  text-align: center;
  border: none;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  margin: 0px;
  width: 40px;
  height: 40px;
}

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
.qty{
  width: 300px;  
  margin: auto;
}
</style>
  <div class="title">
    <%= link_to 'Voltar', orders_path %>
    <h2>Adicionar item</h2>
  </div>
<form action="<%= order_add_item_confirm_url %>" method="post" role="form" class="product">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :prod_id, @product.id %>
  <%= hidden_field_tag :order_id, @order.id %>

  <div class="product-img">
    <img src="<%= @product.photo %>">
  </div>
  <div class="product-info">
    <h3><%=@product.name%></h3>
    <% unless @product.ingredients.empty? %>
      <div class="ingredients"> 
        <%= @product.ingredients.map(&:name).join(", ")%>
      </div>
    <% end %>
  </div> 
  <div class="qty">
    <div class="value-button" id="decrease" onclick="decreaseValue()" value="Decrease Value"><span>-</span></div>
    <input type="number" id="qty" name="qty" value="1" />
    <div class="value-button" id="increase" onclick="increaseValue()" value="Increase Value"><span>+</span></div>
  </div>
